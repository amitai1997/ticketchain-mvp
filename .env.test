# Test Environment Configuration
# This file contains environment variables for testing purposes only

# Environment
NODE_ENV=test

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=test_user
# TEST_DB_PASSWORD must be supplied by the developer or CI system and SHOULD NOT be committed
# TEST_DB_PASSWORD=
TEST_DB_NAME=ticketchain_test

# Logging
LOG_LEVEL=error
LOG_FORMAT=simple

# Disable certain test-time features
ENABLE_RATE_LIMITING=false

# Test Configuration
TEST_TIMEOUT=10000

# Use in-memory database for unit tests if possible
ENABLE_IN_MEMORY_DB=true
