# Environment Configuration Template
# Copy this file to .env and fill in the values

# Environment
NODE_ENV=development

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ticketchain
POSTGRES_PASSWORD=development
POSTGRES_DB=ticketchain_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Blockchain RPC URLs
HARDHAT_RPC_URL=http://localhost:8545
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology/
ETHEREUM_HOLESKY_RPC_URL=https://ethereum-holesky-rpc.publicnode.com

# Private Keys (NEVER commit real keys!)
# Use a dedicated deployer account for each network
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
# Default Hardhat account #0 - DO NOT USE IN PRODUCTION

# Contract Verification
POLYGONSCAN_API_KEY=
ETHERSCAN_API_KEY=

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Email Configuration (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# AWS Configuration (for production)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring
GRAFANA_API_KEY=
SENTRY_DSN=

# Feature Flags
ENABLE_TESTNET_FAUCET=true
ENABLE_GAS_PRICE_ORACLE=false
ENABLE_RATE_LIMITING=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
