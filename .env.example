# Environment Configuration Template
# Copy this file to .env and fill in the actual values for your environment
# This file documents ALL possible environment variables for the project
#
# Quick Start:
# 1. cp .env.example .env
# 2. Fill in required values (marked with YOUR_*_HERE)
# 3. For testing: see .env.test for test-specific configuration

# Environment
NODE_ENV=development

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ticketchain
POSTGRES_PASSWORD=development
POSTGRES_DB=ticketchain_dev

# For tests (additional values)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=ticketchain
DB_PASSWORD=development
DB_NAME=ticketchain_dev_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Blockchain RPC URLs
HARDHAT_RPC_URL=http://localhost:8545
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology/
ETHEREUM_HOLESKY_RPC_URL=https://ethereum-holesky-rpc.publicnode.com

# Private Keys (NEVER commit real keys!)
# Use a dedicated deployer account for each network
DEPLOYER_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
# Default Hardhat account #0 - DO NOT USE IN PRODUCTION
# 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Test accounts (for local development/testing)
TEST_ARTIST_ADDRESS=0x71bE63f3384f5fb98995898A86B02Fb2426c5788
TEST_EVENT_REGISTRY_ADDRESS=0x5fbdb2315678afecb367f032d93f642f64180aa3
TEST_TICKET_NFT_ADDRESS=0xe7f1725e7734ce288f8367e1bb143e90bb3f0512
TEST_MARKETPLACE_ADDRESS=0x9fe46736679d2d9a65f0992f2272de9f3c7fa6e0

# Contract Verification
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_KEY_SECRET=YOUR_API_KEY_SECRET_HERE

# JWT Configuration
JWT_SECRET=YOUR_SECURE_RANDOM_JWT_SECRET
JWT_EXPIRES_IN=7d

# Email Configuration (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# AWS Configuration (for production)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring
GRAFANA_API_KEY=
SENTRY_DSN=

# Feature Flags
ENABLE_TESTNET_FAUCET=true
ENABLE_GAS_PRICE_ORACLE=false
ENABLE_RATE_LIMITING=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Testing & Deployment
REPORT_GAS=true
GAS_PRICE_MULTIPLIER=1.2
DEPLOYMENT_CONFIRMATIONS=2
TEST_TIMEOUT=30000
CONTRACT_SIZER_OUTPUT=true

# Alchemy Amoy RPC (recommended for deployment)
ALCHEMY_AMOY_API_KEY=YOUR_ALCHEMY_API_KEY
# Infura Amoy RPC (backup)
INFURA_PROJECT_ID=YOUR_INFURA_PROJECT_ID

# Contract addresses for development (Hardhat local network)
CONTRACT_EVENT_REGISTRY_ADDRESS=0x5fbdb2315678afecb367f032d93f642f64180aa3
CONTRACT_TICKET_NFT_ADDRESS=0xe7f1725e7734ce288f8367e1bb143e90bb3f0512
CONTRACT_MARKETPLACE_ADDRESS=0x9fe46736679d2d9a65f0992f2272de9f3c7fa6e0
BLOCKCHAIN_PROVIDER_URL=http://localhost:8545
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# CoinMarketCap API (for gas price reporting in USD)
COINMARKETCAP_API_KEY=YOUR_CMC_API_KEY
