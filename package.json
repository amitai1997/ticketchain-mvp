{
  "name": "ticketchain-mvp",
  "version": "1.0.0",
  "description": "Blockchain Ticketing Infrastructure MVP",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "compile": "hardhat compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "hardhat test tests/contracts/unit/*.test.js",
    "test:integration": "hardhat test tests/contracts/integration/*.test.js",
    "test:gas": "REPORT_GAS=true hardhat test tests/contracts/gas/*.test.js",
    "test:contracts": "hardhat test",
    "test:all": "./scripts/run-tests.sh",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "deploy:amoy": "hardhat run scripts/deploy.js --network amoy",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network amoy",
    "size": "hardhat size-contracts",
    "node": "hardhat node",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@nestjs/cli": "^10.4.7",
    "@nestjs/testing": "^10.4.18",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "solhint": "^5.1.0",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@apollo/server": "^4.12.1",
    "@nestjs/apollo": "^12.2.2",
    "@nestjs/bull": "^10.2.3",
    "@nestjs/common": "^10.4.18",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.18",
    "@nestjs/graphql": "^12.2.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "@openzeppelin/contracts": "^5.0.1",
    "apollo-server-express": "^3.13.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^4.18.0",
    "fp-ts": "^2.16.10",
    "graphql": "^16.11.0",
    "ioredis": "^5.6.1",
    "nestjs-typeorm-paginate": "^4.1.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.24",
    "uuid": "^9.0.1"
  }
}
