{
  "name": "ticketchain-mvp",
  "version": "1.0.0",
  "description": "Blockchain Ticketing Infrastructure MVP",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test tests/contracts/unit/*.test.js",
    "test:integration": "hardhat test tests/contracts/integration/*.test.js",
    "test:gas": "REPORT_GAS=true hardhat test tests/contracts/gas/*.test.js",
    "test:all": "./scripts/run-tests.sh",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network mumbai",
    "size": "hardhat size-contracts",
    "node": "hardhat node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "fp-ts": "^2.16.10"
  }
}
