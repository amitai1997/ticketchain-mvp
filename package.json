  "description": "Blockchain Ticketing Infrastructure MVP",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test tests/contracts/unit/*.test.js",
    "test:integration": "hardhat test tests/contracts/integration/*.test.js",
    "test:gas": "REPORT_GAS=true hardhat test tests/contracts/gas/*.test.js",
    "test:contracts": "hardhat test",
    "test:all": "./scripts/run-tests.sh",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "deploy:amoy": "hardhat run scripts/deploy.js --network amoy",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network amoy",
    "size": "hardhat size-contracts",
    "node": "hardhat node",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
