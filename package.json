{
  "name": "ticketchain-mvp",
  "version": "1.0.0",
  "description": "Blockchain Ticketing Infrastructure MVP",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "jest --config ./test/jest-unit.json",
    "test:integration": "jest --config ./test/jest-integration.json",
    "test:gas": "REPORT_GAS=true hardhat test tests/contracts/gas/*.test.js",
    "test:all": "./scripts/run-tests.sh",
    "test:coverage": "jest --config ./test/jest-unit.json --coverage",
    "test:coverage:integration": "jest --config ./test/jest-integration.json --coverage",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "deploy:amoy": "hardhat run scripts/deploy.js --network amoy",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network amoy",
    "size": "hardhat size-contracts",
    "node": "hardhat node",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/chai": "^4.3.11",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.17.57",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^29.7.0",
    "solidity-coverage": "^0.8.5",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "apollo-server-express": "^3.13.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ethers": "^6.14.3",
    "fp-ts": "^2.16.10",
    "graphql": "^16.11.0",
    "ioredis": "^5.6.1",
    "nestjs-typeorm-paginate": "^4.1.0",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0"
  },
  "main": ".eslintrc.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amitai1997/ticketchain-mvp.git"
  },
  "keywords": [],
