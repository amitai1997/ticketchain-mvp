    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.33.0"
